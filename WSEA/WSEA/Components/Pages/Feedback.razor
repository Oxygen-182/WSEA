@page "/feedback"

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row justify-content-left h-100">
            <div class="col-5 col-lg-9 col-xl-6">
                <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 pb-2 pb-md-10 mb-md-5">Оформите заявку</h3>
                        <form>
                            <div class="row">
                                <div class="col-md-10 mb-3 pb-2">
                                    <div data-mdb-input-init class="form-outline">
                                        <input type="text" id="name" class="form-control form-control-lg" placeholder="Имя" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 mb-3 pb-2">
                                    <div data-mdb-input-init class="form-outline">
                                        <input type="tel" id="phoneNumber" class="form-control form-control-lg" placeholder="Номер телефона" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 mb-3 pb-2">
                                    <div data-mdb-input-init class="form-outline">
                                        <input type="email" id="emailAddress" class="form-control form-control-lg" placeholder="Электронная почта" />
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-10 mb-3 pb-2">
                                    <div data-mdb-input-init class="form-outline">
                                        <textarea type="tel" id="phoneNumber" class="form-control form-control-lg" rows="3" placeholder="Описание" />
                                    </div>
                                </div>
                            </div>
                            <div class="mt-1 pt-2">
                                <input data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" type="submit" value="Отправить" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    textarea {
        resize: none;
    }
</style>
